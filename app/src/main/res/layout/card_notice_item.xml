<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/frame"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/pdf_card_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="0dp"
        android:clickable="true"
        android:background="@color/white"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="0dp"
        android:hardwareAccelerated = "true"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rl1"
            android:paddingTop="6dp"
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_margin="2dp"
            android:background="@color/white"
            android:clickable="true"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <RelativeLayout
                            android:id="@+id/thumbnail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginRight="10dip"
                            android:padding="1dip"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="6dp">

                            <com.makeramen.roundedimageview.RoundedImageView
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/teacherImage"
                                android:layout_height="55dp"
                                android:layout_width="55dp"
                                android:background="#faf9f9"
                                android:scaleType="fitXY"
                                app:riv_corner_radius="8dp"
                                app:riv_border_width="2dip"
                                app:riv_border_color="#9b9b9b"
                                app:riv_mutate_background="true"
                                app:riv_tile_mode="repeat"
                                app:riv_oval="false" />

                        </RelativeLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="2dp"
                            android:layout_weight="1"

                            android:orientation="vertical"
                            android:layout_toRightOf="@+id/ll1" >


                            <TextView
                                android:id="@+id/teacherName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:maxLines="2"
                                android:typeface="sans"
                                android:text="teacherName Title"
                                android:fontFamily="sans-serif-medium"
                                android:textColor="@color/black"
                                android:inputType="textCapSentences"
                                android:textIsSelectable="false"
                                android:textSize="18sp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentStart="true" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="3dp"
                                android:id="@+id/linearRamarks"
                                android:layout_below="@id/teacherName"
                                >

                              <!--  <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Subject"
                                    android:id="@+id/SubjectName"
                                    android:textColor="#9b9b9b"
                                    android:singleLine="true"
                                    android:layout_marginRight="6dp"
                                    android:fontFamily="sans-serif"
                                    android:textSize="14sp"/>
                                <View
                                    android:layout_width="2px"
                                    android:layout_height="15dp"
                                    android:layout_gravity="center"
                                    android:layout_marginRight="6dp"
                                    android:background="#9b9b9b"/>-->
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Created On"
                                    android:id="@+id/homeworkCreatedDate"
                                    android:textColor="#9b9b9b"
                                    android:singleLine="true"
                                    android:fontFamily="sans-serif"
                                    android:textSize="14sp"/>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:text="homework Title"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/colorPrimary"
                    android:textSize="22sp"
                    android:id="@+id/homeworkTitle"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginTop="6dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1.5px"
                    android:layout_marginTop="6dp"
                    android:background="#e6e6e6"
                    android:layout_marginBottom="6dp"
                    android:layout_marginRight="6dp"
                    android:layout_marginLeft="6dp"
                    android:visibility="visible"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:visibility="gone"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="Due Date"
                            android:layout_gravity="center"
                            android:textColor="@color/black"
                            android:layout_marginBottom="1.5dp"
                            android:gravity="center_vertical"
                            android:fontFamily="sans-serif"
                            android:textSize="9sp"/>
                            <LinearLayout
                            android:layout_width="42dp"
                            android:layout_height="44dp"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:background="@drawable/calender_icon_back">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="20"
                                android:id="@+id/homeworkDateTv"
                                android:layout_marginTop="6dp"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Dec"
                                android:id="@+id/homeworkMonth"
                                android:textSize="10sp"
                                android:textColor="@color/black"
                                />
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="notice_type"
                            android:textColor="#878787"
                            android:maxLines="13"
                            android:id="@+id/notice_type"
                            android:gravity="center_vertical"
                            android:fontFamily="sans-serif"
                            android:textSize="16sp"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Des "
                            android:textColor="#9b9b9b"
                            android:maxLines="5"
                            android:id="@+id/homeworkDesc"
                            android:layout_marginTop="4dp"
                            android:gravity="center_vertical"
                            android:layout_marginRight="4dp"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>